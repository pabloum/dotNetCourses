@page "{restaurantId:int}"

@model PumToFood.Pages.Restaurants.DetailModel
@{
}

<h2>
    @Model.Restaurant.Name
</h2>

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<div>
    Id: @Model.Restaurant.Id
</div>
<div>
    Location: @Model.Restaurant.Location
</div>

<div>
    Cuisine: @Model.Restaurant.Cuisine
</div>

<a asp-page="./List" class="btn btn-info"> All Resturants</a>

<a class="btn btn-danger"
   asp-page="./Delete"
   asp-route-restaurantId="@Model.Restaurant.Id">
    Delete this Restaurant!
</a>
