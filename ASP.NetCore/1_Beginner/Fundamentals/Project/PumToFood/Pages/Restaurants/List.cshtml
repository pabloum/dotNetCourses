@page
@model PumToFood.Pages.Restaurants.ListModel
@{
}

    <h1>
        This is the Restaurant!! BUAHAHAH
    </h1>

    <div>
        <p>
            @Model.Message
        </p>
        <p>
            @Model.Message2
        </p>

        <div>
            <form method="get">
                <div class="form-group">
                    <div class="input-group">
                        <input type="search" class="form-control" name="searchValue" value="" />
                        @*<span class="input-group-append">*@
                            <button type="submit" class="btn btn-default">
                                <i class="fa fa-search">&#x1F50D;</i>
                            </button>
                        @*</span>*@
                    </div>
                </div>
            </form>

            <table class="table">
                <tr>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Cuisine</th>
                </tr>

                @foreach (var restaurant in Model.Restaurants)
                {
                    <tr>
                        <td>@restaurant.Name</td>
                        <td>@restaurant.Location</td>
                        <td>@restaurant.Cuisine</td>
                    </tr>
                }
                </table>
        </div>
    </div>